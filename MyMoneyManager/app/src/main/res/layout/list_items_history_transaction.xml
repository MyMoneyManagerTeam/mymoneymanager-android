<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_date_transaction"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="8\noct"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_description_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:hint="Description"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/tv_debiteur_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="débiteur"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/tv_crediteur_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="créditeur"
                android:textSize="23sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_somme_transaction"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_gravity="bottom"
            android:hint="Somme"
            android:textSize="23sp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>